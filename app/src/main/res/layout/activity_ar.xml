<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ArActivity">


    <fragment
            android:id = "@+id/scene_form_fragment"
            android:name = "com.google.ar.sceneform.ux.ArFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    
    <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:tag="0"
                    android:id="@+id/bear"
                    android:src="@drawable/bear"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:tag="1"
                    android:id="@+id/cat"
                    android:src="@drawable/cat"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/cow"
                    android:tag="2"
                    android:src="@drawable/cow"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:tag="3"
                    android:id="@+id/dog"
                    android:src="@drawable/dog"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:tag="4"
                    android:id="@+id/elephant"
                    android:src="@drawable/elephant"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:tag="5"
                    android:id="@+id/ferret"
                    android:src="@drawable/ferret"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:tag="6"
                    android:id="@+id/hippopotamus"
                    android:src="@drawable/hippopotamus"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:tag="7"
                    android:id="@+id/horse"
                    android:src="@drawable/horse"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:tag="8"
                    android:id="@+id/koala_bear"
                    android:src="@drawable/koala_bear"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:tag="9"
                    android:id="@+id/lion"
                    android:src="@drawable/lion"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:tag="10"
                    android:id="@+id/reindeer"
                    android:src="@drawable/reindeer"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:tag="11"
                    android:id="@+id/wolverine"
                    android:src="@drawable/wolverine"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </HorizontalScrollView>

</FrameLayout>