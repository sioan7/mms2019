<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/color_picker_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:flexDirection="row"
    app:flexWrap="wrap"
    app:justifyContent="space_around"
    tools:context=".CanvasActivity">

    <Button
        android:id="@+id/color_red"
        android:tag="0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#FF3636"
        android:text="RED"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:onClick="changeColor"
        />
    <Button
        android:id="@+id/color_blue"
        android:tag="1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#03adfc"
        android:text="BLUE"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:onClick="changeColor"

        />

    <Button
        android:id="@+id/color_yellow"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#fff200"
        android:text="YELLOW"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:onClick="changeColor"

        />


    <Button
        android:id="@+id/color_green"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#3fc724"
        android:text="GREEN"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:onClick="changeColor"

        />


    <Button
        android:id="@+id/color_purple"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#9d00ff"
        android:text="PURPLE"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:onClick="changeColor"

        />


    <Button
        android:id="@+id/color_pink"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#fc79c1"
        android:text="PINK"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:onClick="changeColor"

        />

    <Button
        android:id="@+id/color_orange"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#ff8c00"
        android:text="ORANGE"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:onClick="changeColor"

        />

    <Button
        android:id="@+id/color_brown"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#874a00"
        android:text="BROWN"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:onClick="changeColor"

        />

    <Button
        android:id="@+id/color_turquoise"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#00ffdd"
        android:text="TURQUOISE"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:onClick="changeColor"

        />

    <Button
        android:id="@+id/color_grey"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#FF00FF"
        android:text="MAGENTA"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:onClick="changeColor"

        />

    <Button
        android:id="@+id/color_white"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:text="WHITE"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:onClick="changeColor"

        />

    <Button
        android:id="@+id/color_black"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#222222"
        android:text="BLACK"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:onClick="changeColor"

        />


</com.google.android.flexbox.FlexboxLayout>